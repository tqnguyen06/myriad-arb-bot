# ============================================
# POLYMARKET CONFIGURATION (Primary)
# ============================================

# Your Polygon wallet private key (without 0x prefix)
# This wallet needs USDC on Polygon network for trading
POLYGON_PRIVATE_KEY=your_polygon_private_key_here

# API credentials (generated by running: npm run poly:setup)
POLY_API_KEY=
POLY_API_SECRET=
POLY_PASSPHRASE=

# Bot settings
POLY_MIN_SPREAD=2           # Minimum spread % to consider (default: 2)
POLY_MIN_VOLUME=5000        # Minimum 24h volume in USD (default: 5000)
POLY_POLL_INTERVAL=30000    # Scan interval in ms (default: 30000)
POLY_ALERT_SPREAD=5         # Alert when spread exceeds this % (default: 5)
POLY_DRY_RUN=true           # Set to false to enable real trading

# ============================================
# MYRIAD CONFIGURATION (Secondary/Legacy)
# ============================================

# Your Abstract Chain wallet private key (without 0x prefix)
PRIVATE_KEY=your_abstract_private_key_here

# Abstract Chain RPC URL
RPC_URL=https://api.mainnet.abs.xyz

# Myriad bot settings
MIN_PROFIT_THRESHOLD=0.01
POLL_INTERVAL_MS=10000
DRY_RUN=true
